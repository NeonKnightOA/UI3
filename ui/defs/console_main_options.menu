		// Some people need to be reminded they have a slowness setting turned on
		itemDef {
			name videofield
			text "NOTE!! ^1SLOWNESS ACTIVATED!^6 Disable it in Video>Advanced"
			background MP_DIALOGBG
			backcolor MP_DIALOGBGCOLOR
			style 1
			type 0
			textstyle 2
			textscale 0.28
			cvarTest "r_slowness"
			hideCVar { "0" }
			decoration
			rect 32 422 0 0
			textalignx 0 
			textaligny 0
			border 1
			bordercolor MP_BOX_BORDER
			visible 1 
		}
		// always have this button available
		itemDef {
			name button1
			text "Okay!"
			background MP_WIDEBUTTONBG
			style 1
			type ITEM_TYPE_BUTTON
			textstyle 2
			textscale 0.5
			rect 32 384 256 32
			textalignx 32 
			textaligny 24
			cvarTest "ui_browserSortKey"
			hideCVar { "9" }
			forecolor MP_TEXTCOLOR
			backcolor MP_BUTTONBGCOLOR
			action { 
				open mainmenu; 
				setcvar ui_menutab 0; // reset the tabs
				close optionsmenu;
				play MP_SND_SELECT; 
			}
			visible 1 
		}

		#include "ui/common/tooltip.panel"

