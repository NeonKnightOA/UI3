#include "ui/menudef.h"

{
	assetGlobalDef {
		smallFont "gfx/2d/bigchars" 12
		font "gfx/2d/bigchars" 16 
		bigFont "gfx/2d/bigchars" 24 
		cursor "ui/assets/cursor" 
		checkbox_checked "ui/assets/cursor" 
		checkbox_unchecked "ui/assets/gs" 
		itemFocusSound MP_SND_HOVER 
		shadowColor 0.0 0.0 0.0 0.25 
	}
	menuDef {
		name "optionsmenu"
		background MP_BACKGROUND1
		fullScreen 1 
		rect 0 0 640 480
		visible MENU_TRUE
		forecolor MP_FOCUSCOLOR 
		focuscolor MP_TEXTCOLOR
		onOpen { 
			close main;
		}

		#include "ui/common/symbol2.panel" 

		#include "ui/common/console_options.panel"

		/* -----------------------------------------------------------
		TAB X - ALL
		----------------------------------------------------------- */
		itemDef {
			name tab1
			text "Controls"
			background "azuretablong"
			style 1
			type ITEM_TYPE_BUTTON
			textstyle 2
			textscale 0.33
			rect 16 16 128 16
			cvarTest "ui_menutab"
			hideCVar { "0" }
			textalignx 16 
			textaligny 16
			forecolor MP_TEXTCOLOR
			action {
				setcvar ui_menutab 0;
				play MP_SND_SELECT;
			}
			visible 1 
		}
		itemDef {
			name tab2
			text "Video"
			background "azuretablong"
			style 1
			type ITEM_TYPE_BUTTON
			textstyle 2
			textscale 0.33
