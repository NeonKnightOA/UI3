#include "ui/menudef.h"
#include "ui/menudef2.h"

// Biographies of player characters - might deprecate this

{
	assetGlobalDef {
		smallFont "gfx/2d/bigchars" SMALLFONTSIZE
		font "gfx/2d/bigchars" MEDIUMFONTSIZE 
		bigFont "gfx/2d/bigchars" LARGEFONTSIZE 
		cursor "ui/assets/cursor" 
		itemFocusSound MP_SND_HOVER 
		shadowColor 0.0 0.0 0.0 0.25 
	}
	menuDef {
		name "bios"
		background MP_BACKGROUND1
		fullScreen 1 
		rect 0 0 640 480
		visible MENU_TRUE
		forecolor MP_FOCUSCOLOR 
		focuscolor MP_TEXTCOLOR
		onOpen {
		}
		onClose {
			close bios;
			open extras;
		}
		onESC {
			close bios;
			open extras;
		}

#include "ui/defs/symbol.panel" 

#include "ui/defs/gallery/bios.panel"

#include "ui/defs/tooltip.panel"

		/* -----------------------------------------------------------
		TAB X - ALL
		----------------------------------------------------------- */
		itemDef {
			name ret
			text "Return"
			background MP_WIDEBUTTONBG
			style 1
			type ITEM_TYPE_BUTTON
			textstyle 2
			textscale 0.5
			rect 32 384 256 32
			textalignx 32 
			textaligny 24
			cvarTest "ui_browserSortKey"
			hideCVar { "0" }
			forecolor MP_TEXTCOLOR
			backcolor MP_BUTTONBGCOLOR
			mouseEnter { setcvar ui_cdkeychecked "Return to biography selection" fadein tooltip; } mouseExit { fadeout tooltip;} 
			action {
				play MP_SND_SELECT; 
				setcvar ui_browserSortKey 0; 
			}
			visible 1 
		}
		// always have this button available
		itemDef {
			name button1
			text "Back"
			background MP_WIDEBUTTONBG
			style 1
			type ITEM_TYPE_BUTTON
			textstyle 2
			textscale 0.5
			rect 32 384 256 32
			textalignx 32 
			textaligny 24
			cvarTest "ui_browserSortKey"
			showCVar { "0" }
			backcolor MP_BUTTONBGCOLOR
			forecolor MP_TEXTCOLOR
			mouseEnter { setcvar ui_cdkeychecked "Go back to extras menu." fadein tooltip; } mouseExit { fadeout tooltip;} 
			action {
				play MP_SND_SELECT; 
				close bios;
				open extras;
				setcvar ui_browserSortKey 0; // reset the tabs
			}
			visible 1 
		}
	}
}
