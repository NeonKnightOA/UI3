#include "ui/menudef.h"
#include "ui/headers/commonbuttons.h"
{
	assetGlobalDef {
		smallFont "gfx/2d/bigchars" SMALLFONTSIZE
		font "gfx/2d/bigchars" MEDIUMFONTSIZE
		bigFont "gfx/2d/bigchars" LARGEFONTSIZE
		cursor "ui/assets/cursor"
		itemFocusSound MP_SND_HOVER
		shadowColor 0.0 0.0 0.0 0.25
	}
	menuDef {
		name "spladder"
		background MP_BACKGROUND1
		fullScreen 1
		rect 0 0 640 480
		visible MENU_TRUE
		forecolor MP_FOCUSCOLOR
		focuscolor MP_TEXTCOLOR
		onOpen { 
			uiScript loadGameInfo;
			uiScript updateSPMenu;
		}
		onClose {
			play MP_SND_BACK;
			close spladder;
			open spmenu;
			setcvar ui_menutab 0;	// reset the tabs
		}
		onEsc {
			play MP_SND_BACK;
			close spladder;
			open spmenu;
			setcvar ui_menutab 0;	// reset the tabs
		}

#include "ui/common/symbol2.panel"

#include "ui/sp/ladder/sp_selector.panel"

#include "ui/common/tooltip.panel"

/* always have these buttons available */

		GOBACK_BUTTON("Cancel",spladder,spmenu,ui_sptab)

		itemDef { /* Endurance button */
			name endbutton
			background MP_WIDEBUTTONBG group uistuff style 1 type ITEM_TYPE_BUTTON textstyle 2 textscale 0.5 textalignx 32 textaligny 24 forecolor MP_TEXTCOLOR
			mouseEnter { setcvar ui_tip "Enters the Endurance ladders" fadein tooltip; } mouseExit { fadeout tooltip; }
			rect 332 384 256 32
			text "^4Endurance"
			/* action {
				play MP_SND_SELECT;
				close spladder;
				open endurance;
				setcvar ui_sptab 0; // reset the tabs
			} */
			visible 1
		}
	}
}
