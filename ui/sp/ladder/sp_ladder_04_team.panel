	setcvar ui_currentMap 11;
	setcvar ui_gametype 2;
	setcvar g_gametype 3;
	setcvar fraglimit 35;
	setcvar capturelimit 0;
	setcvar timelimit 10;
	setcvar "";
	setcvar "";
	setcvar "";
