	type ITEM_TYPE_CHECKBOX mouseenter { setcvar ui_tip TOOLTIP_CHECKBOX fadein tooltip } mouseexit { fadeout tooltip }
	rect KEYBINDRIGHT KEY_ITEM_7 KEYBIND_MAX_WIDTH KEYBIND_MAX_HEIGHT
	cvarTest "ui_menutab" showCVar { 3 }
	text "Free Look"
	cvar "cl_freelook"
}
itemDef { /* in_joystick - Enable joystick (*) */
	name keybinder style 1 visible 1 noFocusColor 0 textscale KEYBINDTEXSIZE textalign ITEM_ALIGN_RIGHT textalignx 0 textaligny 12 textstyle 6 forecolor MP_TEXTCOLOR
	type ITEM_TYPE_CHECKBOX mouseenter { setcvar ui_tip TOOLTIP_CHECKBOX fadein tooltip } mouseexit { fadeout tooltip }
	rect KEYBINDRIGHT KEY_ITEM_8 KEYBIND_MAX_WIDTH KEYBIND_MAX_HEIGHT
	cvarTest "ui_menutab" showCVar { 3 }
	text "Enable joystick "
	cvar "in_joystick"
}
itemDef { /* joy_threshold - Joystick threshold (*) */
	name keybinder style 1 visible 1 noFocusColor 0 textscale KEYBINDTEXSIZE textalign ITEM_ALIGN_RIGHT textalignx 0 textaligny 12 textstyle 6 forecolor MP_TEXTCOLOR
	type ITEM_TYPE_SLIDER mouseenter { setcvar ui_tip TOOLTIP_SLIDER fadein tooltip } mouseexit { fadeout tooltip }
	rect KEYBINDRIGHT KEY_ITEM_9 KEYBIND_MAX_WIDTH KEYBIND_MAX_HEIGHT
	cvarTest "ui_menutab" showCVar { 3 }
	text "Joystick threshold "
	cvarfloat "joy_threshold" 1 0.05 0.1
}

